# display gpg key files (asc) as text
<Files "*.asc">
  AddType text/plain .asc
</Files>

<IfModule rewrite_module>
  RewriteEngine on

  # redirects for Nextcloud
  RewriteRule ^\.well-known/carddav https://nextcloud.supersandro.de/remote.php/dav/ [R=301,L]
  RewriteRule ^\.well-known/caldav https://nextcloud.supersandro.de/remote.php/dav/ [R=301,L]

  # redirects for mastodon
  RewriteRule ^\.well-known/host-meta https://mastodon.supersandro.de/.well-known/host-meta [R=301,L]
  RewriteRule ^\.well-known/webfinger https://mastodon.supersandro.de/.well-known/webfinger [QSA,L]
</IfModule>
